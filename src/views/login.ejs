<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head')%>
  <body>
    <!-- Header's styles -->
    <header class="main-header">
      <div class="main-header__container">
        <h1 class="main-header__title">SCENTZONE</h1>
        <div class="main-header__menuIcons">
          <a href="/" class="main-header__btn"><i class="fas fa-home"></i></a>
          <a href="/cart" class="main-header__btn"
            ><i class="fas fa-shopping-cart"></i
          ></a>
          <a href="/login" class="main-header__btn"><i class="fas fa-user"></i></a>
        </div>
        <div class="main-header__search">
          <input class="main-header__search--bar" type="text" />
          <span class="icon-search"><i class="fas fa-search"></i></span>
        </div>
      </div>
    </header>
    <!-- NavBar's styles -->
    <nav class="main-nav">
      <div class="main-nav__container">
        <span class="icon-menu" id="btn-menu"><i class="fas fa-bars"></i></span>
        <ul class="main-nav__menu">
          <li class="menu__item">
            <a href="/categories" class="menu__link">Amaderado</a>
          </li>
          <li class="menu__item"><a href="/categories" class="menu__link">Floral</a></li>
          <li class="menu__item"><a href="/categories" class="menu__link">Cítrico</a></li>
          <li class="menu__item"><a href="/categories" class="menu__link">Dulce</a></li>
          <li class="menu__item"><a href="/categories" class="menu__link">Frutal</a></li>
        </ul>
        <span class="icon-search"><i class="fas fa-search"></i></span>
      </div>
    </nav>
    <main>
      <!-- Login section -->
      <div class="main__login-container">
        <h1 class="main__login-title">Inicio de sesión</h1>
        <div class="main__login-content">
          <form action="/">
            <ul class="main__login-userCredentials">
              <li>
                <label class="main__login-label" for="name"
                  >Correo Electónico:</label
                >
                <input
                  class="main__login-input"
                  type="email"
                  id="name"
                  name="user_name"
                  placeholder="Correo electrónico"
                />
              </li>
              <li>
                <label class="main__login-label" for="password"
                  >Contraseña:</label
                >
                <input
                  class="main__login-input"
                  type="password"
                  id="password"
                  name="user_password"
                  placeholder="Contraseña"
                />
              </li>
            </ul>
            <div class="main__login-userOptions">
              <a href="/registro" class="main__login-createCount"
                >¿No tiene una cuenta?</a
              >
              <a href="">¿Se te olvidó la contraseña?</a>
            </div>
            <div class="main__login-google">
              <a href="#"
                ><p>
                  <i class="fab fa-google"></i>Inicio de sesión con Google
                </p></a
              >
            </div>
            <button type="submit" class="main__login-btnLogin">
              Iniciar sesión
            </button>
          </form>
        </div>
      </div>
    </main>
    <!-- Footer section -->
    <%- include('./partials/footer')%>

  </body>
</html>
