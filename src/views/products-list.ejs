<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head')%>
    <body>
      <!-- Header's styles -->
      <%- include('./partials/header')%>
  
      <!-- NavBar's styles -->
      <%- include('./partials/nav')%>

      <h2>Productos</h2>

      <div class="products-list-container">
          <table class="table">
            <thead>
              <tr>
                  <th>Producto</th>
                  <th>ID</th>
                  <th>Marca</th>
                  <th>Precio</th>
                  <th>Categoría</th>
                  <th>Género</th>
                  <th>Estado</th>
                  <th>Imagen</th>                  
                  <th>Tamaño</th>
                  <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                  <% if (locals.showProducts && locals.showProducts.length) { %>
                    <% showProducts.forEach(item => { %>
                        <td data-label="Product"> <%= item.productName %></td>
                        <td data-label="ID"> <%= item.id %></td> 
                        <td data-label="Marca"> <%= item.brand %></td>
                        <td data-label="Precio"> <%= item.price %></td>
                        <td data-label="Categoria"> <%= item.category %></td>
                        <td data-label="Género"> <%= item.gender %></td>
                        <td data-label="Estado"> <%= item.status ? 'Activo' : 'Inactivo' %></td>
                        <td data-label="Imagen"> <img src="assets/products/<%= item.image %>" alt="product"></td>
                        <td data-label="Tamaño"> <%= item.size %></td>
                        <td data-label="Actions"> <a href=""><i class="fas fa-eye"></i></a> <span><a href="/products/<%= item.id %>/edit"><i class="fas fa-edit"></i></a></span></td>
                      </tr>
                    </tbody>

                    <% }); %>
           
                  <% } else {%>
                    <h3>Todavía no hay productos</h3>
                  <% } %>

              

          </table>
      </div>
    </body>
    
</body>
</html>